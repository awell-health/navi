{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ],
      "env": [
        "NEXT_PUBLIC_GRAPHQL_ENDPOINT",
        "JWT_SIGNING_KEY",
        "JWT_KEY_ID",
        "TOKEN_ENCRYPTION_KEY",
        "BRANDING_API_URL",
        "BRANDING_API_TOKEN",
        "EDGE_CONFIG",
        "EDGE_CONFIG_URL",
        "NODE_ENV",
        "GRAPHQL_ENDPOINT",
        "KV_URL",
        "KV_REST_API_URL",
        "KV_REST_API_TOKEN",
        "REDIS_URL",
        "KV_REST_API_READ_ONLY_TOKEN"
      ],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.development.local",
        ".env.local",
        ".env.development",
        ".env"
      ]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    }
  }
}
