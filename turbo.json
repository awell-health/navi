{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ],
      "env": [
        "BASE_URL",
        "JWT_SIGNING_KEY",
        "JWT_KEY_ID",
        "TOKEN_ENCRYPTION_KEY",
        "BRANDING_API_URL",
        "BRANDING_API_TOKEN",
        "EDGE_CONFIG",
        "EDGE_CONFIG_URL",
        "NODE_ENV",
        "HTTP_COOKIE_DOMAIN",
        "KV_URL",
        "KV_REST_API_URL",
        "KV_REST_API_TOKEN",
        "REDIS_URL",
        "KV_REST_API_READ_ONLY_TOKEN",
        "SMART_REDIRECT_URI",
        "STATSIG_SERVER_KEY",
        "STYTCH_ENV",
        "STYTCH_PROJECT_ID",
        "STYTCH_SECRET",
        "STYTCH_B2B_BASE_URL",
        "STYTCH_B2B_PROJECT_ID",
        "STYTCH_B2B_PUBLIC_TOKEN",
        "STYTCH_B2B_SECRET",
        "STYTCH_TRUSTED_TOKEN_PROFILE_ID",
        "STYTCH_TRUSTED_TOKEN_PRIVATE_KEY_B64",
        "STYTCH_TRUSTED_TOKEN_KID",
        "NEXT_PUBLIC_STATSIG_CLIENT_KEY",
        "NEXT_PUBLIC_MEDPLUM_BASE_URL",
        "NEXT_PUBLIC_MEDPLUM_WS_BASE_URL",
        "NEXT_PUBLIC_MEDPLUM_CLIENT_ID",
        "NEXT_PUBLIC_MEDPLUM_CLIENT_SECRET",
        "MEDPLUM_CLIENT_ID",
        "MEDPLUM_CLIENT_SECRET"
      ],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.development.local",
        ".env.local",
        ".env.development",
        ".env"
      ]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    }
  }
}
