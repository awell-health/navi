{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": ["node"],
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022"]
  },
  "include": [
    "*.ts",
    "../src/**/*"
  ],
  "exclude": [
    "../node_modules",
    "../.next"
  ]
}
