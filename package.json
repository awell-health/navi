{
  "name": "navi-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean",
    "dev:portal": "turbo dev --filter=navi-portal",
    "dev:test-app": "turbo dev --filter=navi-simple-embed",
    "build:packages": "turbo build --filter='./packages/*'",
    "build:portal": "turbo build --filter=navi-portal",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "start:portal": "pnpm --filter=navi-portal run start",
    "codegen": "pnpm codegen:core && pnpm codegen:portal",
    "codegen:core": "pnpm --filter=@awell-health/navi-core run codegen",
    "codegen:portal": "pnpm --filter=navi-portal run codegen",
    "storybook": "pnpm --filter=navi-portal run storybook",
    "deploy:navi-dot-js": "pnpm --filter=@awell-health/navi-dot-js run build && sh ./scripts/deploy-gcp.sh"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.12.1",
  "dependencies": {},
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "turbo": "^2.3.4",
    "typescript": "^5",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "@types/node": "^20",
    "dotenv": "^16.5.0",
    "tsx": "^4.20.3"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
